<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>News Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #dbdbdb;
        }
        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
        }
    </style>
</head>
<body>
<%- include('../templates/navbar'); %>

<div class="container mt-5 p-5 w-lg-75 bg-white shadow rounded">
    <h1 class="mb-4 text-center">News Page</h1>

    <div id="news-articles">
        <% if (articles.length > 0) { %>
            <div class="row">
                <% articles.forEach(article => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <img src="<%= article.urlToImage || 'https://via.placeholder.com/150' %>" class="card-img-top" alt="News Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %></h5>
                                <p class="card-text"><%= article.description || 'No description available.' %></p>
                            </div>
                            <div class="card-footer d-flex justify-content-around">
                                <a href="<%= article.url %>" target="_blank" class="btn btn-outline-primary">Read More</a>
<!--                                <form action="/news/fav/<%= article.url %>" method="POST">-->
<!--                                    <button type="submit" class="btn btn-outline-secondary">Add to favorite</button>-->
<!--                                </form>-->
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">No news articles available. Please try again later.</p>
        <% } %>
    </div>
</div>

<%- include('../templates/footer'); %>
</body>
</html>
